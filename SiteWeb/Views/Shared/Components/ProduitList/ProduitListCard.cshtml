@model List<GestionStock.BL.Models.ProduitModel>

@foreach (var produit in Model)
{
    <div class="col d-flex flex-grow-1">
        <div class="card h-100">
            @*<img src="data:image/jpg;base64,@produit.Image">*@
            <img src="/contents/investir-dans-le-vin.jpg" class="card-img-top">
            <div class="card-body text-center d-flex flex-column">
                <h5 class="card-title">@produit.Nom</h5>
                @if (@produit.Quantite >= 1)
                {
                    <p class="card-text stock" style="color:#35B736">En Stock</p>
                }
                else
                {
                    <p class="card-text rupture" style="color:#E2202C">Rupture</p>
                }
                <p class="card-text">@produit.Categorie.Nom</p>
                <p class="card-text">@String.Format("{0:0.00}",@produit.Prix)</p>
                <p class="card-text">@produit.Description</p>
                <p class="card-text fw-bold details" onclick=modal(@produit.Id)>Cliquez-ici pour plus de détails</p>
            </div>
        </div>
    </div>
}

<div class="none-modal" style="display:none">
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog  modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Understood</button>
                </div>
            </div>
        </div>
    </div>
</div>